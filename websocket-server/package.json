{
  "name": "modbus-websocket-proxy",
  "version": "1.0.0",
  "description": "WebSocket to Modbus TCP proxy server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --output dist/modbus-proxy",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output dist/modbus-proxy",
    "build:win": "pkg . --targets node18-win-x64 --output dist/modbus-proxy-windows.exe",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/modbus-proxy-macos",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/modbus-proxy-linux"
  },
  "keywords": [
    "modbus",
    "websocket",
    "proxy",
    "tcp"
  ],
  "author": "",
  "license": "MIT",
  "bin": "server.js",
  "pkg": {
    "scripts": [
      "server.js"
    ],
    "assets": [],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "net": "^1.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
